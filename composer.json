{
    "name": "rodrigoaramburu/scraphp",
    "description": "Biblioteca para raspagem de dados na web",
    "license": "MIT",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "symfony/dom-crawler": "^6.3",
        "symfony/css-selector": "^6.3",
        "monolog/monolog": "^3.5",
        "php-webdriver/webdriver": "^1.15"
    },
    "require-dev": {
        "pestphp/pest": "^2.24",
        "mockery/mockery": "^1.6"
    },
    
    "autoload": {
        "psr-4": {
            "ScraPHP\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Rodrigo Aramburu",
            "email": "rodrigoaramburu@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": ["pint --preset=psr12"],
        "test": ["pest"],
        "test:lint": ["pint --preset=psr12 --test"],
        "test:stan": ["phpstan analyse"]
    }
}
